@model IEnumerable<PAKTD.Models.MO.mCliente>
@{
    ViewBag.Title = "ListarFuncionario";
    Layout = "~/Views/Dashboard/_Layout.cshtml";
}

<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />

<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

<h2 class="text-center">CLIENTES CADASTRADOS</h2>
<table id="clienteTable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr class="bg-success">
            <th>Nome</th>
            <th>Telefone</th>
            <th>Email</th>
            <th>CPF</th>
            <th>CEP</th>
            <th>Opções</th>

        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {

            foreach (var cliente in Model)
            {
                <tr>
                   
                    <td>@cliente.NmCli</td>
                    <td>@cliente.FoneCli</td>
                    <td>@cliente.EmailCli</td>
                    <td>@cliente.CpfCli</td>
                    <td>@cliente.CepCli</td>
                    <td>

                        
                        @Html.ActionLink("Excluir", "excluirCliente", "ClienteUsuario", new { id = cliente.IdCli }, new { @class = "btn btn-outline-danger", @type = "button", onclick = "return confirm('Deseja realmente excluir?');" })

                    </td>
                </tr>
            };
        }
        else
        {

            <tr>
                <td class="text-center" colspan="5">Nenhum cliente cadastrado.</td>
            </tr>

        }

    </tbody>

</table>



<script>

    new DataTable('#clienteTable');

</script>