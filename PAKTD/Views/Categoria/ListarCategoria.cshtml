@model IEnumerable<PAKTD.Models.MO.mCategoria>

@{
    ViewBag.Title = "ListarCategoria";
    Layout = "~/Views/Dashboard/_Layout.cshtml";
}
<link href="~/Style/CategoriaStyle/Cat.css" rel="stylesheet" />
<h2 class="text-center">CATEGORIAS CADASTRADAS</h2>
<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

<table id="catTable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr class="bg-success">
            <th>Código</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Opções</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {

            foreach (var categoria in Model)
            {
                <tr>

                    <td>@categoria.IdCate</td>
                    <td>@categoria.NmCate</td>
                    <td>@categoria.dsCate</td>
                    <td>

                        @Html.ActionLink("Editar", "alterarFuncionario", "Funcionario", new { id =categoria.IdCate }, new { @class = "btn btn-outline-warning" })
                        @Html.ActionLink("Excluir", "ExcluirCategoria", "Categoria", new { id = categoria.IdCate }, new { @class = "btn btn-outline-danger", @type = "button", onclick = "return confirm('Deseja realmente excluir?');" })

                    </td>
                </tr>
            };
        }
        else
        {

            <tr>
                <td class="text-center" colspan="5">Nenhuma categoria cadastrado.</td>
            </tr>

        }

    </tbody>



</table>






<script>

    new DataTable('#catTable');

</script>

