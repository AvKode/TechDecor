@model   IEnumerable<PAKTD.Models.MO.mProduto>
@{
    ViewBag.Title = "consultarProduto";
    Layout = "~/Views/Dashboard/_Layout.cshtml";
}


    <link href="~/Style/CategoriaStyle/Cat.css" rel="stylesheet" />
    <h2 class="text-center">CATEGORIAS CADASTRADAS</h2>
    <table id="catTable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr class="bg-success">
             
                <th>Nome</th>
                <th>Imagem</th>
    

            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {

                foreach (var categoria in Model)
                {
                    <tr>

                        <td>@categoria.NmPro</td>
                        <td>
                            <img class="card-img-right flex-auto d-none d-md-block data-src'' alt='Thumbnail [318x300]' " style="width:318px;height:300px;"
                                 src="@categoria.ImgProd" data-holder-rendered="true" />
                        </td>
                    </tr>
                };
            }
            else
            {

                <tr>
                    <td class="text-center" colspan="5">Nenhuma categoria cadastrado.</td>
                </tr>

            }

        </tbody>



    </table>






    <script>


    $(document).ready(function () {
        $('#catTable').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Portuguese-Brasil.json"
            },

        });

    });

    </script>

