@model PAKTD.Models.MO.mUsuario
@{
    ViewBag.Title = "cadastrar Funcionario";
    Layout = "~/Views/Dashboard/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="container">
    <h2>Cadastrar Funcionário</h2>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.LabelFor(model => model.NomeUsu, htmlAttributes: new { })
        @Html.EditorFor(model => model.NomeUsu, new { htmlAttributes = new { @class = " @class = form-control", @placeholder = "Digite o nome do usuário" } })

        @Html.ValidationMessageFor(model => model.NomeUsu, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SenhaUsu, htmlAttributes: new { })

        @Html.EditorFor(model => model.SenhaUsu, new { htmlAttributes = new { @class = " @class = form-control", @placeholder = "Digite a senha" } })
        @Html.ValidationMessageFor(model => model.SenhaUsu, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ConfsenhaUsu, htmlAttributes: new { })

        @Html.EditorFor(model => model.ConfsenhaUsu, new { htmlAttributes = new { @class = " @class = form-control", @placeholder = "Confirme a senha" } })
        @Html.ValidationMessageFor(model => model.ConfsenhaUsu, "", new { @class = "text-danger" })

    </div>
    <!-- Botão de Envio -->
    <button type="submit" class="btn btn-primary">Registrar</button>

</div>
}

