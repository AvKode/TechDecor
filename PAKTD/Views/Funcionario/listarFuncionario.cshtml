@model IEnumerable<PAKTD.Models.MO.mUsuario>
    @{
        ViewBag.Title = "ListarFuncionario";
        Layout = "~/Views/Dashboard/_Layout.cshtml";
    }


    <h2 class="text-center">CLIENTES CADASTRADOS</h2>
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr class="bg-success">
                <th>Código</th>
                <th>Nome</th>
                <th>Tipo</th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {

                foreach (var funcionario in Model)
                {
                    <tr>
                        <td>@funcionario.IdUsu</td>
                        <td>@funcionario.NomeUsu</td>
                        <td>Funcionário</td>

                    </tr>
                };
            }
            else
            {

                <tr>
                    <td class="text-center" colspan="5">Nenhum funcionário cadastrado.</td>
                </tr>

            }

        </tbody>

    </table>



