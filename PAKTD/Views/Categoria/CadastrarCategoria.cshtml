@model PAKTD.Models.MO.mCategoria

@{
    ViewBag.Title = "CadastrarCategoria";
    Layout = "~/Views/Dashboard/_Layout.cshtml";
}

<link href="~/Style/CategoriaStyle/Cat.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <h2>Cadastrar Categoria</h2>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(model => model.NmCate, htmlAttributes: new { })
            @Html.EditorFor(model => model.NmCate, new { htmlAttributes = new { @class = " @class = form-control", @placeholder = "Digite o nome da categoria" } })

            @Html.ValidationMessageFor(model => model.NmCate, "", new { @class = "text-danger" })

        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dsCate, htmlAttributes: new { })

            @Html.EditorFor(model => model.dsCate, new { htmlAttributes = new { @class = " @class = form-control", @placeholder = "Digite a descrição da categoria" } })
            @Html.ValidationMessageFor(model => model.dsCate, "", new { @class = "text-danger" })

        </div>
        <!-- Botão de Envio -->
        <button type="submit" class="btn btn-primary">Registrar</button>

    </div>
}


