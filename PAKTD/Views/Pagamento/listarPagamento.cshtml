@model IEnumerable<PAKTD.Models.MO.mPagamento>

@{
    ViewBag.Title = "ListarCategoria";
    Layout = "~/Views/Dashboard/_Layout.cshtml";
}
<link href="~/Style/PagamentoStyle/Pag.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />

<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

<h2 class="text-center">PAGAMENTOS CADASTRADAS</h2>
<table id="pagaTable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr class="bg-success">
            <th>Código</th>
            <th>Nome</th>
          


        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {

            foreach (var pagamento in Model)
            {
                <tr>

                    <td>@pagamento.IdPagamento</td>
                    <td>@pagamento.DsPagamento</td>
                 
                </tr>
            };
        }
        else
        {

            <tr>
                <td class="text-center" colspan="5">Nenhuma categoria cadastrado.</td>
            </tr>

        }

    </tbody>

</table>
<script>

    new DataTable('#pagaTable');

</script>

